{
  "name": "Healthcare Translation Assistant",
  "short_name": "HealthTranslate",
  "description": "Real-time multilingual translation for healthcare environments",
  "theme_color": "#2563eb",
  "background_color": "#ffffff",
  "display": "standalone",
  "scope": "./",
  "start_url": "./",
  "orientation": "portrait-primary",
  "lang": "en-US",
  "dir": "ltr",
  "categories": ["health", "medical", "utilities", "productivity"],
  "icons": [
    {
      "src": "assets/icons/icon-72x72.png",
      "sizes": "72x72",
      "type": "image/png",
      "purpose": "maskable any"
    },
    {
      "src": "assets/icons/icon-96x96.png",
      "sizes": "96x96",
      "type": "image/png",
      "purpose": "maskable any"
    },
    {
      "src": "assets/icons/icon-128x128.png",
      "sizes": "128x128",
      "type": "image/png",
      "purpose": "maskable any"
    },
    {
      "src": "assets/icons/icon-144x144.png",
      "sizes": "144x144",
      "type": "image/png",
      "purpose": "maskable any"
    },
    {
      "src": "assets/icons/icon-152x152.png",
      "sizes": "152x152",
      "type": "image/png",
      "purpose": "maskable any"
    },
    {
      "src": "assets/icons/icon-192x192.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "maskable any"
    },
    {
      "src": "assets/icons/icon-384x384.png",
      "sizes": "384x384",
      "type": "image/png",
      "purpose": "maskable any"
    },
    {
      "src": "assets/icons/icon-512x512.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "maskable any"
    }
  ],
  "shortcuts": [
    {
      "name": "Start Translation",
      "short_name": "Translate",
      "description": "Start real-time translation session",
      "url": "/translator",
      "icons": [
        {
          "src": "assets/icons/icon-96x96.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "Emergency Phrases",
      "short_name": "Emergency",
      "description": "Quick access to medical emergency phrases",
      "url": "/translator?emergency=true",
      "icons": [
        {
          "src": "assets/icons/emergency-96x96.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "Help Guide",
      "short_name": "Help",
      "description": "How to use the healthcare translator",
      "url": "/help",
      "icons": [
        {
          "src": "assets/icons/help-96x96.png",
          "sizes": "96x96"
        }
      ]
    }
  ],
  "screenshots": [
    {
      "src": "assets/screenshots/desktop-main.png",
      "type": "image/png",
      "sizes": "1280x720",
      "form_factor": "wide",
      "label": "Healthcare Translation Assistant main interface"
    },
    {
      "src": "assets/screenshots/mobile-main.png",
      "type": "image/png",
      "sizes": "390x844",
      "form_factor": "narrow",
      "label": "Mobile view of translation interface"
    },
    {
      "src": "assets/screenshots/tablet-dual-view.png",
      "type": "image/png",
      "sizes": "1024x768",
      "form_factor": "wide",
      "label": "Tablet dual-panel translation view"
    }
  ],
  "prefer_related_applications": false,
  "protocol_handlers": [
    {
      "protocol": "web+healthcare-translate",
      "url": "/translator?text=%s"
    }
  ],
  "share_target": {
    "action": "/translator",
    "method": "GET",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url"
    }
  },
  "display_override": ["window-controls-overlay", "standalone", "minimal-ui"],
  "edge_side_panel": {
    "preferred_width": 400
  },
  "launch_handler": {
    "client_mode": "navigate-existing"
  },
  "related_applications": [
    {
      "platform": "webapp",
      "url": "https://healthcare-translate.app/manifest.json"
    }
  ]
}
